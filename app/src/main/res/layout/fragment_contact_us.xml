<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ContactUs">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernametxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Name"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        />

    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/thin_with_border_radius"
        android:minHeight="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/usernametxt"
        tools:layout_editor_absoluteX="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mailtxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameInput"
        android:text="Email"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/thin_with_border_radius"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/mailtxt"
        tools:layout_editor_absoluteX="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phonetxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailInput"
        android:text="phone number"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        />
    <EditText
        android:id="@+id/phoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/thin_with_border_radius"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/phonetxt"
        tools:layout_editor_absoluteX="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messagetxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneInput"
        android:text="Message"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        />

    <EditText
        android:id="@+id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/thin_with_border_radius"
        android:minHeight="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@+id/messagetxt"
        tools:layout_editor_absoluteX="20dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageInput"
        android:text="Send Message"
        android:textAllCaps="false"
        android:id="@+id/submitButton"/>


</androidx.constraintlayout.widget.ConstraintLayout>